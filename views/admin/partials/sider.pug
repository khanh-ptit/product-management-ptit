//- Sidebar
ul.navbar-nav.bg-gradient-primary.sidebar.sidebar-dark.accordion(id="accordionSidebar")

    //- Sidebar - Brand
    a.sidebar-brand.d-flex.align-items-center.justify-content-center(href=`${prefixAdmin}/dashboard`)
        div.sidebar-brand-icon.rotate-n-15
            i.fas.fa-box-open
        div.sidebar-brand-text.mx-3 Quản Lý Sản Phẩm

    //- Divider
    hr.sidebar-divider.my-0

    //- Nav Item - Dashboard
    li.nav-item(class=(currentPath && currentPath.startsWith(`${prefixAdmin}/dashboard`) ? 'active' : ''))
        a.nav-link(href=`${prefixAdmin}/dashboard`)
            i.fas.fa-fw.fa-tachometer-alt
            span Tổng quan

    //- Nav Item - Products
    if (role.permissions.includes('products_view'))
        li.nav-item(class=(currentPath && currentPath.startsWith(`${prefixAdmin}/products`) ? 'active' : ''))
            a.nav-link(href=`${prefixAdmin}/products`)
                i.fas.fa-fw.fa-box
                span Quản lý sản phẩm

    //- Nav Item - Orders (Newly Added)
    if (role.permissions.includes('orders_view'))
        li.nav-item(class=(currentPath && currentPath.startsWith(`${prefixAdmin}/orders`) ? 'active' : ''))
            a.nav-link(href=`${prefixAdmin}/orders`)
                i.fas.fa-fw.fa-receipt
                span Quản lý đơn hàng

    //- Nav Item - Categories
    if (role.permissions.includes('product-category_view'))
        li.nav-item(class=(currentPath && currentPath.startsWith(`${prefixAdmin}/product-category`) ? 'active' : ''))
            a.nav-link(href=`${prefixAdmin}/product-category`)
                i.fas.fa-fw.fa-tags
                span Danh mục sản phẩm

    //- Nav Item - Accounts
    if (role.permissions.includes('accounts_view'))
        li.nav-item(class=(currentPath && currentPath.startsWith(`${prefixAdmin}/accounts`) ? 'active' : ''))
            a.nav-link(href=`${prefixAdmin}/accounts`)
                i.fas.fa-fw.fa-users
                span Quản lý tài khoản

    //- Nav Item - Roles (Group Permissions)
    li.nav-item(class=(currentPath && currentPath.startsWith(`${prefixAdmin}/roles`) ? 'active' : ''))
        a.nav-link(href=`${prefixAdmin}/roles`)
            i.fas.fa-fw.fa-user-shield
            span Quản lý nhóm quyền

    //- Nav Item - Permissions
    li.nav-item(class=(currentPath && currentPath.startsWith(`${prefixAdmin}/roles/permissions`) ? 'active' : ''))
        a.nav-link(href=`${prefixAdmin}/roles/permissions`)
            i.fas.fa-fw.fa-key
            span Phân quyền

    //- Divider
    hr.sidebar-divider

    //- Heading
    div.sidebar-heading Tài khoản

    //- Nav Item - Account
    li.nav-item
        a.nav-link.collapsed(href="#", data-toggle="collapse", data-target="#collapseAccount", aria-expanded="true", aria-controls="collapseAccount")
            i.fas.fa-fw.fa-user
            span Tài khoản của bạn
        div#collapseAccount.collapse(aria-labelledby="headingAccount", data-parent="#accordionSidebar")
            div.bg-white.py-2.collapse-inner.rounded
                h6.collapse-header Menu:
                a.collapse-item(href=`${prefixAdmin}/user/info`) Thông tin tài khoản
                a.collapse-item(href=`${prefixAdmin}/user/edit`) Đổi mật khẩu
                a.collapse-item(href=`${prefixAdmin}/user/logout`) Đăng xuất

    //- Divider
    hr.sidebar-divider.d-none.d-md-block

    //- Sidebar Toggler (Sidebar)
    div.text-center.d-none.d-md-inline
        button.rounded-circle.border-0(id="sidebarToggle")

    //- Sidebar Message
    div.sidebar-card.d-none.d-lg-flex
        img.sidebar-card-illustration.mb-2(src="https://img.icons8.com/ios-filled/100/fa314a/product.png", alt="Product Management Icon")
        p.text-center.mb-2
            strong Quản Lý Sản Phẩm
            br
            | Giúp bạn quản lý sản phẩm hiệu quả và tối ưu hóa kho hàng.
        a.btn.btn-warning.btn-sm(href="/products") Xem tất cả sản phẩm

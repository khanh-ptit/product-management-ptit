doctype html
html(lang="en")

    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        meta(name="description" content="")
        meta(name="author" content="")
        //- link(rel="icon" type="image/png" href="https://img.icons8.com/emoji/48/fire.png") 
        link(rel="icon" type="image/png" href="https://img.icons8.com/ios-filled/50/000000/product.png")

        title Đăng nhập hệ thống

        //- Custom fonts for this template
        link(href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css")
        link(href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet")

        //- Custom styles for this template
        link(href="/css/sb-admin-2.min.css" rel="stylesheet")
        link(rel="stylesheet", href="/css/auth.css")
        link(rel="stylesheet", href="/css/main.css")

    body.bg-gradient-primary
        include ../../mixins/alert.pug
        +alert-error(5000)
        +alert-success(5000)

        .container

            //- Outer Row
            .row.justify-content-center

                .col-xl-10.col-lg-12.col-md-9

                    .card.o-hidden.border-0.shadow-lg.my-5
                        .card-body.p-0
                            //- Nested Row within Card Body
                            .row
                                .col-lg-6.d-none.d-lg-block.bg-login-image
                                
                                .col-lg-6
                                    .p-5
                                        .text-center
                                            h1.h4.text-gray-900.mb-4 Hệ thống quản lý sản phẩm!
                                        form(class="user" action=`${prefixAdmin}/user/login` method="POST")
                                            .form-group
                                                input#exampleInputEmail.form-control.form-control-user(type="email" name="email" aria-describedby="emailHelp" placeholder="Nhập email")
                                            .form-group
                                                input#exampleInputPassword.form-control.form-control-user(type="password" name="password" placeholder="Mật khẩu")
                                            .form-group
                                                .custom-control.custom-checkbox.small
                                                    input#customCheck.custom-control-input(type="checkbox")
                                                    label.custom-control-label(for="customCheck") Nhớ mật khẩu
                                            button.btn.btn-primary.btn-user.btn-block(type="submit") Đăng nhập
                                            hr
                                            a.btn.btn-google.btn-user.btn-block(href="index.html")
                                                i.fab.fa-google.fa-fw
                                                | Đăng nhập với Google
                                            a.btn.btn-facebook.btn-user.btn-block(href="index.html")
                                                i.fab.fa-facebook-f.fa-fw
                                                | Đăng nhập với Facebook
                                        hr
                                        .text-center
                                            a.small(href=`${prefixAdmin}/user/forgot-password`) Quên mật khẩu?
                                        
        //- Bootstrap core JavaScript
        script(src="/vendor/jquery/jquery.min.js")
        script(src="/vendor/bootstrap/js/bootstrap.bundle.min.js")

        //- Core plugin JavaScript
        script(src="/vendor/jquery-easing/jquery.easing.min.js")

        //- Custom scripts for all pages
        script(src="/js/sb-admin-2.min.js")
        script(src="/js/script.js") 
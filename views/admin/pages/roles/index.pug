extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/form-search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/sort.pug
include ../../mixins/alert.pug

block content
    +alert-success(5000)
    +alert-error(5000)

    h1.mb-3.header Nhóm quyền

    .card.mb-3
        .card-header Thao tác và thêm mới
        .card-body
                .row
                    .col-4
                        +form-change-multi(`${prefixAdmin}/roles/change-multi?_method=PATCH`)
                    .col-4
                        a.d-none.d-sm-inline-block.btn.btn-sm.btn-success.shadow-sm(href=`${prefixAdmin}/roles/create`)
                            i.fas.fa-plus.fa-sm.text-white-50
                            |  Tạo mới nhóm quyền
                    .col-4
                        a.d-none.d-sm-inline-block.btn.btn-sm.btn-primary.shadow-sm(href=`${prefixAdmin}/roles/permissions`)
                            i.fas.fa-key.fa-sm.text-white-50
                            |  Phân quyền

    //- Bảng danh sách sản phẩm
    .table-responsive
        table(
            class="table table-hover table-sm"
            checkbox-multi
        )
            thead
                tr
                    th
                        input(type="checkbox" name="checkall")
                    th STT
                    th Tiêu đề
                    th Mô tả ngắn
                    th Hành động
            tbody
                each item, index in roles
                    tr
                        td
                            input(
                                type="checkbox"
                                name="id"
                                value=item.id
                            )
                        td #{index + 1}
                        td #{item.title}
                        td #{item.description}
                        td
                            a(
                                href=`${prefixAdmin}/roles/detail/${item.id}`
                                class="btn btn-secondary btn-sm"
                            ) Xem
                            a(
                                href=`${prefixAdmin}/roles/edit/${item.id}`
                                class="btn btn-warning btn-sm ml-1"
                            ) Sửa
                            button(
                                class="btn btn-danger btn-sm ml-1"
                                data-id=item.id
                                button-delete
                            ) Xóa
    +pagination(pagination)

    form(
        action=""
        method="POST"
        id="form-delete-item"
        data-path=`${prefixAdmin}/roles/delete`
    )

    script(src="/admin/js/role.js") 
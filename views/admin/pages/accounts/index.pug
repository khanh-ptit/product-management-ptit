extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/form-search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/sort.pug
include ../../mixins/alert.pug
include ../../mixins/moment.pug

block content
    +alert-success(5000)
    +alert-error(5000)

    h1.mb-3.header Danh sách tài khoản

    .card.mb-3 
        .card-header Bộ lọc và tìm kiếm
        .card-body 
            .row    
                .col-4 
                    +filter-status(filterStatus)
                .col-4 
                    +form-search("accounts")
                .col-4 
                    +sort("accounts") 

    .card.mb-3
        .card-header Thao tác và thêm mới
        .card-body
                .row
                    .col-8
                        +form-change-multi(`${prefixAdmin}/accounts/change-multi?_method=PATCH`)
                    .col-4
                        a.d-none.d-sm-inline-block.btn.btn-sm.btn-success.shadow-sm(href=`${prefixAdmin}/accounts/create`)
                            i.fas.fa-plus.fa-sm.text-white-50
                            |  Tạo mới tài khoản

    //- Bảng danh sách sản phẩm
    .table-responsive
        table(
            class="table table-hover table-sm"
            checkbox-multi
        )
            thead
                tr
                    th
                        input(type="checkbox" name="checkall")
                    th STT
                    th Hình ảnh
                    th Họ tên
                    th Email
                    th Nhóm quyền
                    th Trạng thái
                    th Hành động
                    th Ngày tạo
            tbody
                each item, index in records
                    tr
                        td
                            input(
                                type="checkbox"
                                name="id"
                                value=item.id
                            )
                        td #{index + 1}
                        td
                            img(src=item.avatar
                                alt=item.title
                                width="100px" 
                                height="auto")
                        td #{item.fullName}
                        td #{item.email}
                        td #{item.roleInfo.title}
                        td
                            if (item.status == "active")
                                a(
                                    href="javascript:;" 
                                    data-status="active"
                                    data-id=item.id
                                    button-change-status
                                    class="badge badge-success") Hoạt động
                            else 
                                a(
                                    href="javascript:;"
                                    data-status="inactive"
                                    data-id=item.id
                                    button-change-status
                                    class="badge badge-danger") Dừng hoạt động
                        td
                            a(
                                href=`${prefixAdmin}/accounts/detail/${item.id}`
                                class="btn btn-secondary btn-sm"
                            ) Xem
                            a(
                                href=`${prefixAdmin}/accounts/edit/${item.id}`
                                class="btn btn-warning btn-sm ml-1"
                            ) Sửa
                            button(
                                class="btn btn-danger btn-sm ml-1"
                                data-id=item.id
                                button-delete
                            ) Xóa
                        td 
                            +format-dateTime(item.createdAt)
    +pagination(pagination)

    form(
        action=""
        method="POST"
        id="form-change-status"
        data-path=`${prefixAdmin}/accounts/change-status`
    )

    form(
        action=""
        method="POST"
        id="form-delete-item"
        data-path=`${prefixAdmin}/accounts/delete`
    )

    script(src="/admin/js/account.js") 